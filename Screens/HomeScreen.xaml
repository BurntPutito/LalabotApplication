<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LalabotApplication.Screens.HomeScreen"
             Title="Home">

    <VerticalStackLayout Margin="20" Spacing="10">

        <Label
        Text="Welcome! User"
        FontFamily="OutfitRegular"
        FontSize="30"
        FontAttributes="Bold"
        HorizontalOptions="Start"/>

        <Grid>
            <RoundRectangle
                Background="AliceBlue"
                CornerRadius="15"
                HeightRequest="150"
                HorizontalOptions="Start"/>

            <Label
                Margin="10"
                Text="You don't have any delivery request yet."
                FontFamily="OutfitRegular"
                FontSize="20"/>
        </Grid>

    </VerticalStackLayout>
</ContentPage>