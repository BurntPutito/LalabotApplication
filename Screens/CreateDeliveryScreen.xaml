<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:LalabotApplication.Screens"
             x:Class="LalabotApplication.Screens.CreateDeliveryScreen"
             Title="CreateDeliveryScreen">

    <ScrollView>
        <VerticalStackLayout
            Margin="20"
            Spacing="10"
            HorizontalOptions="Fill">

            <Label
                Text="Create Delivery"
                FontFamily="OutfitRegular"
                FontSize="30"
                FontAttributes="Bold"
                HorizontalOptions="Start"
                Margin="0, 0, 0, 20"/>

            <!--Receiver Search with Suggestions-->
            <Label
                Text="Select Receiver"
                FontFamily="OutfitLight"
                FontSize="Medium"/>

            <!-- Search Entry -->
            <Grid Margin="0, 0, 0, 10">
                <RoundRectangle
                    BackgroundColor="AliceBlue"
                    HeightRequest="50"
                    CornerRadius="15"
                    Stroke="#2D4A6E"
                    StrokeThickness="2"/>
                <Entry
                    Text="{Binding ReceiverSearchText}"
                    Placeholder="Type receiver name..."
                    FontFamily="OutfitLight"
                    FontSize="16"
                    BackgroundColor="Transparent"
                    Margin="15, 0"/>
            </Grid>

            <!-- Filtered User Suggestions -->
            <CollectionView
                ItemsSource="{Binding FilteredUsers}"
                IsVisible="{Binding HasFilteredUsers}"
                HeightRequest="150">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10, 5">
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer 
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type local:CreateDeliveryScreenModel}}, Path=SelectReceiverCommand}"
                                    CommandParameter="{Binding .}"/>
                            </Grid.GestureRecognizers>

                            <RoundRectangle
                                BackgroundColor="AliceBlue"
                                CornerRadius="10"/>

                            <VerticalStackLayout Padding="15, 10">
                                <Label 
                                    Text="{Binding Username}"
                                    FontFamily="OutfitRegular"
                                    FontSize="16"
                                    TextColor="#2D4A6E"/>
                                <Label 
                                Text="{Binding Email}"
                                FontFamily="OutfitLight"
                                FontSize="12"
                                TextColor="Gray"/>
                            </VerticalStackLayout>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Selected Receiver Display -->
            <Grid
                IsVisible="{Binding HasSelectedReceiver}"
                RowDefinitions="Auto"
                ColumnDefinitions="Auto, *, Auto"
                HeightRequest="70">
                <!--background-->
                <RoundRectangle
                    Grid.ColumnSpan="2"
                    BackgroundColor="#E8F5E9"
                    CornerRadius="15"
                    Stroke="#4CAF50"
                    Margin="0"
                    StrokeThickness="2"/>
                <!--check icon-->
                <Label
                    Grid.Column="0"
                    Text="✓"
                    Margin="15, 0, 10, 0"
                    FontSize="24"
                    TextColor="#4CAF50"
                    VerticalOptions="Center"
                    HorizontalOptions="Start"/>
                <!--name and email-->
                <VerticalStackLayout
                    Grid.Column="1"
                    Spacing="0"
                    VerticalOptions="Center"
                    HorizontalOptions="Start"
                    Margin="0, 0, 20, 0">
                    <Label 
                        Text="{Binding SelectedReceiver.Username}"
                        FontFamily="OutfitRegular"
                        FontSize="16"
                        TextColor="#2D4A6E"/>
                    <Label 
                        Text="{Binding SelectedReceiver.Email}"
                        FontFamily="OutfitLight"
                        FontSize="12"
                        TextColor="Gray"/>
                </VerticalStackLayout>
                <!--close button-->
                <Button 
                    Grid.Column="2"
                    Text="✕"
                    BackgroundColor="Transparent"
                    TextColor="#F44336"
                    FontAttributes="Bold"
                    FontSize="22"
                    HorizontalOptions="End"
                    VerticalOptions="Center"
                    Command="{Binding ClearReceiverCommand}"/>
            </Grid>

            <!--File Category Entry-->
            <Label
                Text="File Category"
                FontFamily="OutfitLight"
                FontSize="Medium"/>
            <Grid Margin="0, 0, 0, 20">
                <RoundRectangle
                    BackgroundColor="AliceBlue"
                    HeightRequest="50"
                    CornerRadius="15"
                    Stroke="#2D4A6E"
                    StrokeThickness="2"/>
                <Picker
                    Title="Select file type"
                    SelectedIndex="{Binding SelectedCategoryIndex}"
                    FontFamily="OutfitLight"
                    FontSize="16"
                    BackgroundColor="Transparent"
                    Margin="15, 0">
                    <Picker.Items>
                        <x:String>Documents</x:String>
                        <x:String>Forms</x:String>
                        <x:String>Reports</x:String>
                        <x:String>Confidential</x:String>
                        <x:String>Exam Questionnaire</x:String>
                        <x:String>Answer Sheet</x:String>
                        <x:String>Files</x:String>
                        <x:String>Other</x:String>
                    </Picker.Items>
                </Picker>
            </Grid>

            <!--Destination Picker-->
            <Label
                Text="Destination"
                FontFamily="OutfitLight"
                FontSize="Medium"/>
            <Grid Margin="0, 0, 0, 20">
                <RoundRectangle
                    BackgroundColor="AliceBlue"
                    HeightRequest="50"
                    CornerRadius="15"
                    Stroke="#2D4A6E"
                    StrokeThickness="2"/>
                <Picker
                    x:Name="DestinationPicker"
                    Title="Select destination"
                    SelectedIndex="{Binding SelectedDestinationIndex}"
                    FontFamily="OutfitLight"
                    FontSize="16"
                    BackgroundColor="Transparent"
                    Margin="10, 0">
                    <Picker.Items>
                        <x:String>Destination 1 - Room A</x:String>
                        <x:String>Destination 2 - Room B</x:String>
                        <x:String>Destination 3 - Room C</x:String>
                    </Picker.Items>
                </Picker>
            </Grid>

            <!--Message Entry-->
            <Label
                Text="Message"
                FontFamily="OutfitLight"
                FontSize="Medium"/>
            <Grid Margin="0, 0, 0, 30">
                <RoundRectangle
                    BackgroundColor="AliceBlue"
                    HeightRequest="120"
                    CornerRadius="15"
                    Stroke="#2D4A6E"
                    StrokeThickness="2"/>
                <Editor
                    Text="{Binding Message}"
                    Placeholder="Enter optional message"
                    FontFamily="OutfitLight"
                    FontSize="16"
                    BackgroundColor="Transparent"
                    AutoSize="TextChanges"
                    MaximumHeightRequest="120"
                    Margin="15, 10"/>
            </Grid>

            <!-- Submit Button -->
            <Button
                Text="Create Delivery Request"
                BackgroundColor="#2D4A6E"
                TextColor="White"
                FontFamily="OutfitRegular"
                FontSize="18"
                HeightRequest="55"
                CornerRadius="15"
                Command="{Binding CreateDeliveryCommand}"
                Margin="0, 10, 0, 20"/>

            <!-- Cancel Button -->
            <Button
                Text="Cancel"
                BackgroundColor="Transparent"
                TextColor="#2D4A6E"
                FontFamily="OutfitLight"
                FontSize="16"
                BorderColor="#2D4A6E"
                BorderWidth="2"
                HeightRequest="50"
                CornerRadius="15"
                Command="{Binding CancelCommand}"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>