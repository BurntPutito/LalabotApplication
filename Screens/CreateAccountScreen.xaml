<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LalabotApplication.Screens.CreateAccountScreen"
             Title="CreateAccountScreen"
			 NavigationPage.HasNavigationBar="False">
	
	<!-- Main Screen ratio -->
	<Grid RowDefinitions=".3*, .7*">
        <Image Aspect="AspectFill" Source="lalabot_background.png"/>
        <Grid BackgroundColor="#2D4A6E" Opacity=".5"/>
		<Grid ColumnDefinitions="*,*">
            <!--main logo-->
            <Image Margin="0,0,0,30"
                   Aspect="AspectFit"
                   HeightRequest="200"
                   Source="lalabot_logo_wlogobackground.png"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   Grid.ColumnSpan="2"/>
		</Grid>

		<!-- Login UI Background -->
		<Grid Grid.Row="1">
			<RoundRectangle Margin="-3, -30, -3, -2"
                            CornerRadius="35, 35, 0, 0"
                            Fill="White"/>
			<VerticalStackLayout Margin="30, 0, 30, 0">
				<Label FontAttributes="Bold"
                       FontFamily="bold"
                       FontSize="Large"
                       Text="Create your account!"
                       TextColor="#2D2D2D"/>
        
				<!-- enter name field -->
				<Grid Margin="-10, 15, 0, 0" ColumnDefinitions=".2*, .8*">
					<RoundRectangle BackgroundColor="#EDEBF6"
                                    CornerRadius="10"
                                    HeightRequest="50"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"
                                    WidthRequest="50"/>
					<Image HorizontalOptions="Center">
						<Image.Source>
							<FontImageSource
                                FontFamily="AwesomeSolid"
                                Glyph="&#xf007;"
                                Size="30"
                                Color="#2D4A6E"/>
						</Image.Source>
					</Image>
					<Entry Grid.Column="1"
                           Text="{Binding Username}"
                           Placeholder="NAME"
                           VerticalOptions="Center"/>
				</Grid>
				
				<!-- email field -->
				<Grid Margin="-10, 15, 0, 0" ColumnDefinitions=".2*, .8*">
					<RoundRectangle BackgroundColor="#EDEBF6"
                                    CornerRadius="10"
                                    HeightRequest="50"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"
                                    WidthRequest="50"/>
					<Image HorizontalOptions="Center">
						<Image.Source>
							<FontImageSource
                                FontFamily="AwesomeSolid"
                                Glyph="&#xf0e0;"
                                Size="30"
                                Color="#2D4A6E"/>
						</Image.Source>
					</Image>
					<Entry Grid.Column="1"
                           Text="{Binding Email}"
                           Placeholder="EMAIL"
                           VerticalOptions="Center"/>
				</Grid>

				<!-- password field -->
				<Grid Margin="-10, 15, 0, 0" ColumnDefinitions=".2*, .8*">
					<RoundRectangle BackgroundColor="#EDEBF6"
                                    CornerRadius="10"
                                    HeightRequest="50"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"
                                    WidthRequest="50"/>
					<Image HorizontalOptions="Center">
						<Image.Source>
							<FontImageSource
                                FontFamily="AwesomeSolid"
                                Glyph="&#xf084;"
                                Size="30"
                                Color="#2D4A6E"/>
						</Image.Source>
					</Image>
					<Entry x:Name="PasswordEntry"
                           Grid.Column="1"
                           Text="{Binding Password}"
                           Placeholder="PASSWORD"
                           IsPassword="True"
                           VerticalOptions="Center"/>
                    
                    <!-- Eye Icon Toggle -->
                    <ImageButton Grid.Column="2"
                                 VerticalOptions="Center"
                                 HorizontalOptions="End"
                                 BackgroundColor="Transparent"
                                 Padding="10"
                                 Clicked="TogglePasswordVisibility">
                        <ImageButton.Source>
                            <FontImageSource
                                x:Name="EyeIcon"
                                FontFamily="AwesomeSolid"
                                Glyph="&#xf06e;"
                                Size="20"
                                Color="#A3A3A4"/>
                        </ImageButton.Source>
                    </ImageButton>
                </Grid>

                <!-- Create account button -->
				<Button
                    Margin="0, 30, 0, 0"
                    BackgroundColor="#2D4A6E"
                    HeightRequest="50"
                    Command="{Binding CreateAccountCommand}"
                    Text="Create Account"
                    TextColor="#FBF6FD"/>
                
                
                <!-- Sign in with -->

                <Grid ColumnDefinitions="*,Auto,*" Margin="0, 15, 0, 15">
                    <BoxView Grid.Column="0"
                             HeightRequest="1"
                             Opacity="0.3"
                             BackgroundColor="Black"
                             VerticalOptions="Center"/>

                    <Label Grid.Column="1"
                           Opacity="0.5"
                           Margin="5, 0, 5, 0"
                           Text="Or continue with"/>

                    <BoxView Grid.Column="2"
                             Opacity="0.3"
                             HeightRequest="1"
                             BackgroundColor="Black"
                             VerticalOptions="Center"/>
                </Grid>

                <!--facebook and google option-->
                <Grid>
                    <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="20">
                        <!--google-->
                        <Grid HeightRequest="50" WidthRequest="50">
                            <RoundRectangle BackgroundColor="#EDEBF6" CornerRadius="10"/>
                            <Image
                                HorizontalOptions="Center"
                                VerticalOptions="Center"
                                Source="google_logo.png"
                                WidthRequest="40"
                                HeightRequest="40">
                                <Image.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding SignInWithGoogleCommand}"/>
                                </Image.GestureRecognizers>
                            </Image>
                        </Grid>

                        <!--facebook-->
                        <Grid HeightRequest="50" WidthRequest="50">
                            <RoundRectangle BackgroundColor="#EDEBF6" CornerRadius="10"/>
                            <Image
                                HorizontalOptions="Center"
                                VerticalOptions="Center"
                                Source="facebook_logo.png"
                                WidthRequest="40"
                                HeightRequest="40">
                                <Image.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding SignInWithFacebookCommand}"/>
                                </Image.GestureRecognizers>
                            </Image>
                        </Grid>
                    </HorizontalStackLayout>
                </Grid>

            </VerticalStackLayout>

            <!-- Delivery Logo positioned at the bottom -->
            <Image Aspect="AspectFit"
                   Source="lalabot_delivery_logo.png"
                   VerticalOptions="End"
                   HorizontalOptions="Fill"
                   Margin="0, 0, 0, 0"/>
		</Grid>
	</Grid>
</ContentPage>