<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
             x:Class="LalabotApplication.Screens.SuccessfulCreateAccountScreen"
             Title="SuccessfulCreateAccountScreen">

    <Grid Margin="0, 0, 0, 80">
        <VerticalStackLayout
            VerticalOptions="Center"
            HorizontalOptions="Center">
            
            <!-- Animation -->
            <skia:SKLottieView
                x:Name="SuccessAnimation"
                HeightRequest="200"
                RepeatCount="0"
                Source="Sucesso.json"/>
            <Label
                Text="Account Successfully Created!"
                FontFamily="OutfitRegular"
                FontSize="24"
                FontAttributes="Bold"
                Margin="0, -50, 0, 80"
                HorizontalOptions="Center"/>
            
            <!-- Proceed to Login button -->
            <Button
                x:Name="NavigateLogin"
                BackgroundColor="#2D4A6E"
                Text="Proceed to Login?"
                FontFamily="OutfitLight"
                FontSize="18"
                TextColor="#FBF6FD"
                Margin="0, 0, 0, 10"
                HeightRequest="50"
                HorizontalOptions="Center"
                Clicked="NavigateLogin_Clicked"/>
            
            <!-- Timer -->
            <Label
                x:Name="TimerLabel"
                Text="Redirecting to login in 5 seconds..."
                FontFamily="OutfitLight"
                FontAttributes="Bold"
                FontSize="16"
                TextColor="#A3A3A4"
                HorizontalOptions="Center"/>
            
        </VerticalStackLayout>
    </Grid>
</ContentPage>