<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LalabotApplication.Screens.SettingsScreen"
             Title="SettingsScreen">

    <VerticalStackLayout
            Margin="20"
            Spacing="10">

        <Label
                Text="Settings"
                FontFamily="OutfitRegular"
                FontSize="30"
                FontAttributes="Bold"
                HorizontalOptions="Start"/>

        <!--about-->
        <Grid>
            <RoundRectangle 
                Fill="AliceBlue"
                Stroke="#2D4A6E"
                StrokeThickness="3"
                CornerRadius="5"/>

            <HorizontalStackLayout 
                Spacing="5" 
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Padding="15, 10">
                <HorizontalStackLayout.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding LogoutCommand}"/>
                </HorizontalStackLayout.GestureRecognizers>

                <Image 
                    Source="about.png"
                    WidthRequest="30"
                    HeightRequest="30"
                    VerticalOptions="Center"/>

                <Label 
                    Text="About"
                    TextColor="Black"
                    FontFamily="OutfitLight"
                    FontSize="Medium"
                    VerticalOptions="Center"/>
            </HorizontalStackLayout>
        </Grid>

        <!--logout-->
        <Grid>
            <RoundRectangle 
                Fill="AliceBlue"
                Stroke="#2D4A6E"
                StrokeThickness="3"
                CornerRadius="5"/>

            <HorizontalStackLayout 
                Spacing="5" 
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Padding="15, 10">
                <HorizontalStackLayout.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding LogoutCommand}"/>
                </HorizontalStackLayout.GestureRecognizers>

                <Image 
                    Source="logout.png"
                    WidthRequest="30"
                    HeightRequest="30"
                    VerticalOptions="Center"/>

                <Label 
                    Text="Logout"
                    TextColor="Black"
                    FontFamily="OutfitLight"
                    FontSize="Medium"
                    VerticalOptions="Center"/>
            </HorizontalStackLayout>
        </Grid>



    </VerticalStackLayout>
</ContentPage>