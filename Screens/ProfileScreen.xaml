<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LalabotApplication.Screens.ProfileScreen"
             Title="Profile"
             NavigationPage.HasNavigationBar="True">

    <ScrollView>
        <VerticalStackLayout
            Margin="20"
            Spacing="20"
            VerticalOptions="Start">

            <!-- Profile Picture -->
            <Grid
                HeightRequest="150"
                WidthRequest="150"
                HorizontalOptions="Center"
                Margin="0,20,0,0">

                <!-- Circle background -->
                <Ellipse
                    Fill="AliceBlue"
                    Stroke="#2D4A6E"
                    StrokeThickness="4"
                    HeightRequest="150"
                    WidthRequest="150"/>

                <!-- Avatar Image -->
                <Image
                    Source="{Binding AvatarSource}"
                    Aspect="AspectFill"
                    HeightRequest="140"
                    WidthRequest="140"
                    HorizontalOptions="Center"
                    VerticalOptions="Center">
                    <Image.Clip>
                        <EllipseGeometry
                            Center="70,70"
                            RadiusX="70"
                            RadiusY="70"/>
                    </Image.Clip>
                </Image>
            </Grid>

            <!-- Username -->
            <Label
                Text="{Binding Username}"
                FontFamily="OutfitRegular"
                FontSize="28"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                TextColor="#2D2D2D"/>

            <!-- Email -->
            <Label
                Text="{Binding Email}"
                FontFamily="OutfitLight"
                FontSize="16"
                HorizontalOptions="Center"
                TextColor="#A3A3A4"
                Margin="0,-15,0,0"/>

            <!-- Divider -->
            <BoxView
                HeightRequest="2"
                BackgroundColor="#E0E0E0"
                Margin="0,10,0,10"/>

            <!-- Edit Profile Button -->
            <Button
                Text="Edit Profile"
                BackgroundColor="#2D4A6E"
                TextColor="White"
                FontFamily="OutfitRegular"
                FontSize="18"
                HeightRequest="55"
                CornerRadius="15"
                Command="{Binding EditProfileCommand}"
                Margin="0,10,0,0"/>

            <!-- Member Since (Optional Info) -->
            <Label
                Text="Member since account creation"
                FontFamily="OutfitLight"
                FontSize="14"
                HorizontalOptions="Center"
                TextColor="#A3A3A4"
                Margin="0,20,0,0"/>

            <Button
                Text="Test Avatar Picker"
                Command="{Binding TestAvatarPickerCommand}"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>